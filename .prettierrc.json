{
    "singleQuote": false,
    "tabWidth": 4,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "endOfLine": "auto",
    "arrowParents": "avoid",
    "plugins": [
        "prettier-plugin-pkg"
    ],
    "importOrder": [
        "^react$",
        "<THIRD_PARTY_MODULES>",
        "^(shared|uiKit|components|localization)/(.+)$",
        "^app/(.+)$",
        "^./(.+)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
        "classProperties",
        "decorators-legacy",
        "typescript",
        "jsx"
    ]
}